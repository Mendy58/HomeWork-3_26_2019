@using HomeWork_3_26_2019.Models;
@using SimchaDBManager;
@model IndexModel
<html>
<body>
	<div class="container">
		<div id="simchas-index">

			<div class="header">
				<h1>Simchas</h1>
			</div>

			<div class="row header">
				<div class="col-md-4">
					<button class="btn btn btn-danger" id="new-simcha">New Simcha</button>
				</div>
			</div>
			<div class="table-responsive">
				<table class="table table-striped table-bordered">
					<tr>
						<th style="text-align:center;vertical-align:middle;">Contributions</th>
						<th style="text-align:center;vertical-align:middle;">Simcha Name</th>
						<th style="text-align:center;vertical-align:middle;">Contributor Count</th>
						<th style="text-align:center;vertical-align:middle;">Total</th>
						<th style="text-align:center;vertical-align:middle;">Date</th>
					</tr>
					@foreach (Simcha s in Model.simchas)
					{
						<tr>
							<td style="text-align:center;vertical-align:middle;">
								<a class="btn btn-primary" href="">Contributions</a>
							</td>
							<td style="text-align:center;vertical-align:middle;">
								@s.Name
							</td>

							<td style="text-align:center;vertical-align:middle;">
								@s.TotalContributors/@Model.Pplindb
							</td>
							<td style="text-align:center;vertical-align:middle;">
								@s.MRaised
							</td>
							<td style="text-align:center;vertical-align:middle;">
								@s.Date
							</td>
						</tr>
					}
				</table>
			</div>
			<!-- Modal -->
			<div id="modal-div">
				<div class="modal fade in" id="new-simcha-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
					<div class="modal-dialog">
						<form action="/Home/AddSimcha" class="new_simcha" id="new_simcha" method="post">
							<div style="display:none"><input name="utf8" type="hidden" value="✓"></div>
							<div class="modal-content">
								<div class="modal-header">
									<button type="button" class="close" data-dismiss="modal">
										<span aria-hidden="true">×</span>
										<span class="sr-only">Close</span>
									</button>
									<h4 class="modal-title" id="myModalLabel">New Simcha</h4>
								</div>
								<div class="modal-body">

									<div class="form-group">
										<label>Simcha Name</label>
										<input class="form-control" id="simcha_name" name="Name" placeholder="Simcha Name" type="text">
									</div>
									<div class="form-group">
										<label>Date</label>
										<input type="datetime" name="Date" class="form-control" id="datepicker">
									</div>
									<div class="modal-footer">
										<button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
										<input class="btn btn-primary" name="commit" type="submit" value="Save">
									</div>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>
</html>
@section scripts {
	<script src="~/Scripts/index.js"></script>
}